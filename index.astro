---
import Layout from '../layouts/Layout.astro';
import FolderStructure from '../components/FolderStructure.astro';
---

<Layout title="Student Resources">
  <main class="min-h-screen bg-gray-100">
    <header class="bg-blue-600 text-white py-8 px-6 mb-8">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold mb-2">Student Resources</h1>
        <p class="text-blue-100">Access your course materials and resources</p>
      </div>
    </header>
    
    <div class="max-w-6xl mx-auto px-4">
      <FolderStructure />
    </div>
  </main>
</Layout>